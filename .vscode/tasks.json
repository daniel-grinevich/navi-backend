    {
      "label": "Enable Debugging",
      "type": "shell",
      "command": "docker compose -f docker-compose.local.yml stop django && DEBUGPY_ENABLED=1 docker compose -f docker-compose.local.yml up -d django",
      "problemMatcher": [],
